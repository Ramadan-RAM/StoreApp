@{
    ViewBag.Title = "Item_details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@{
    StoreApp.Models.Store_DBEntities db = new StoreApp.Models.Store_DBEntities();
    StoreApp.Models.Item itm;
    itm = db.Items.Find(ViewBag.id);
}

<!DOCTYPE html>
<html>
<head>
</head>
<body>
    <div class="app-main__outer">
        <div class="app-main__inner">
            <div class="app-page-title">
                <div class="page-title-wrapper">
                    <div class="page-title-heading">
                        <div class="page-title-icon-rounded">
                            <i class="fa-accessible-icon fa fa-table">
                            </i>
                        </div>
                        <div>
                            &nbsp;
                            Item details
                            <div class="page-title-subheading">

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="main-card mb-3 card">
                        <div class="card-header">
                            @itm.Item_name
                        </div>

                        <div class="table-responsive">

                            <table class="align-middle mb-0 table table-borderless table-striped table-hover">

                                <thead>

                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="widget-content p-0">
                                                <div class="widget-content-wrapper">
                                                    <div class="widget-content-left mr-3">
                                                        <div class="widget-content-left">
                                                            <img src="~/Images/Items/@itm.Item_img" alt="Item" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center">
                                            <label>Item name:</label>
                                            <div class="badge badge-warning">@itm.Item_name</div>
                                        </td>
                                        <td class="text-center">
                                            <label>Price:</label>
                                            <div class="badge badge-warning">@itm.Item_price EG</div>
                                        </td>
                                        <td class="text-center">
                                            <label>Details:</label>
                                            <div class="badge badge-warning">@itm.Item_details</div>
                                        </td>
                                        <td class="text-center">
                                            <label>Quantity:</label>
                                            <div class="badge badge-warning">@itm.Item_quantity</div>
                                        </td>
                                        <td class="text-center">
                                            @Html.ActionLink("Back to list", "Home")
                                        </td>
                                    </tr>
                                </tbody>

                            </table>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>



